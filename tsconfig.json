{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                            // Define o ponto base para paths
    "paths": {
      "@/*": ["./src/*"]                       // Importações absolutas via "@/"
    },
    "jsx": "react-native"
  },
  "include": [
    "src",
    "app",
    "types",
    "**/*.ts",
    "**/*.tsx"
  ]
}
